<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <include layout="@layout/actionbar"></include>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_margin="25dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:capitalize="words"

                android:text="ENTER STATION NAME"
                android:textAllCaps="true"
                android:textColor="#DC4819"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/staeng"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|textAutoComplete"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="ENTER STATION ABBRIVATION"
                android:textAllCaps="true"
                android:textColor="#DC4819"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/stacode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|textAutoComplete"
                android:textColor="#000000" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"

                android:text="ENTER STATION NAME IN HINDI"
                android:textAllCaps="true"
                android:textColor="#DC4819"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/stahindi"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textAllCaps="true"
                android:textColor="#000000" />

            <Button
                android:id="@+id/done"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/custbut"

                android:text="Done"
                android:textColor="#FFFFFF" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>