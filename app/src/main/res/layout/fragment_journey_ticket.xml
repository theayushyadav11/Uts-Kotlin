<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragments.JourneyTicketFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fadeScrollbars="true"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/mainlayout"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="#ebedee"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_margin="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ticketxmark" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="CANCEL TICKET"
                                android:textColor="#f78848" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/history" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="BOOKING HISTORY"
                                android:textColor="#f78848"
                                android:textSize="13sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/showTicket"
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/showticket" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="SHOW TICKET"
                                android:textColor="#f78848"
                                android:textSize="13sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center|top"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/wallet" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="R - WALLET"
                                android:textColor="#f78848"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/user" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="PROFILE"
                                android:textColor="#f78848"
                                android:textSize="13sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/trans" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="TRANSACTIONS"
                                android:textColor="#f78848"
                                android:textSize="13sp" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                                    android:id="@+id/joutic"
                                    android:layout_width="370dp"
                                    android:layout_height="700dp"
                                        android:layout_marginHorizontal="10dp"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardView"
                                        android:layout_width="match_parent"

                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        app:cardCornerRadius="5dp"
                                        app:cardElevation="2dp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:background="@drawable/gradient"

                                            android:paddingStart="20dp"
                                            android:paddingTop="2dp"
                                            android:text="NORMAL BOOKING"
                                            android:textColor="#FFFFFF"
                                            android:textSize="18sp"/>

                                        <LinearLayout
                                            android:id="@+id/parentjoutic"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="40dp"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:paddingHorizontal="10dp"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">


                                                <RadioButton
                                                    android:id="@+id/rb1"
                                                    android:layout_alignParentStart="true"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"

                                                    android:layout_weight="1"
                                                    android:allowUndo="true"
                                                    android:backgroundTint="#CC1717"


                                                    android:text="Book and Travel(Paperless)"
                                                    android:textSize="10sp" />

                                                <RadioButton
                                                    android:id="@+id/rb2"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:allowUndo="false"
                                                    android:checked="false"
                                                    android:layout_marginEnd="20dp"
                                                    android:text="Book and Print(Paper)"
                                                    android:textSize="10sp" />
                                            </RelativeLayout>

                                            <LinearLayout
                                                android:id="@+id/tempCard"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">



                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="15dp"
                                                android:gravity="center|center_horizontal"
                                                android:orientation="horizontal">

                                                <LinearLayout
                                                    android:id="@+id/sourceLayout"
                                                    android:layout_width="108dp"

                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                    <TextView
                                                        android:id="@+id/textView6"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="center"
                                                        android:text="Depart from"
                                                        android:textColor="#000000"
                                                        android:textSize="13dp" />

                                                    <TextView
                                                        android:id="@+id/staabr"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="30dp"
                                                        android:gravity="center"

                                                        android:text="STN"
                                                        android:textColor="#FF423F3F"
                                                        android:textSize="18sp" />

                                                    <TextView
                                                        android:id="@+id/staname"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="center"
                                                        android:text="Station Name"
                                                        android:textColor="#000000"
                                                        android:textSize="9dp" />

                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="1dp"
                                                        android:background="#B85C1E" />
                                                </LinearLayout>

                                                <ImageView
                                                    android:id="@+id/imageView7"
                                                    android:layout_width="80dp"
                                                    android:layout_height="50dp"
                                                    app:srcCompat="@drawable/left_right_arrow_svgrepo_com" />

                                                <LinearLayout
                                                    android:id="@+id/destLayout"
                                                    android:layout_width="108dp"

                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                    <TextView

                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="center"
                                                        android:text="Going to"
                                                        android:textColor="#000000"
                                                        android:textSize="13dp" />

                                                    <TextView

                                                        android:id="@+id/staabr2"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="30dp"
                                                        android:gravity="center"
                                                        android:text="STN"
                                                        android:textColor="#423F3F"
                                                        android:textSize="18sp" />

                                                    <TextView

                                                        android:id="@+id/staname2"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="center"
                                                        android:text="Station Name"
                                                        android:textColor="#F7000000"
                                                        android:textSize="9dp" />

                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="1dp"
                                                        android:background="#B85C1E" />
                                                </LinearLayout>


                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="50dp"

                                                android:layout_marginVertical="15dp"
                                                android:gravity="center"
                                                android:orientation="horizontal">

                                                <Button
                                                    android:id="@+id/button2"
                                                    android:layout_width="150dp"
                                                    android:layout_height="35dp"
                                                    android:background="@drawable/custbut"
                                                    android:text="NEXT TRAINS"
                                                    android:textColor="#FFFFFF" />

                                                <Button
                                                    android:id="@+id/btnGetFare"
                                                    android:layout_width="150dp"
                                                    android:layout_height="35dp"
                                                    android:layout_marginLeft="15dp"
                                                    android:background="@drawable/custbut"

                                                    android:text="GET FARE"
                                                    android:textColor="#FFFFFF" />
                                            </LinearLayout>
                                        </LinearLayout>
                                        <!-- Your layout content goes here -->

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

            </LinearLayout>





        </ScrollView>
    </LinearLayout>


</FrameLayout>