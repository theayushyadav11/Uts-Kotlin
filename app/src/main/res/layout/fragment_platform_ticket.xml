<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragments.JourneyTicketFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fadeScrollbars="true"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/mainlayout"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="#ebedee"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_margin="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ticketxmark" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="CANCEL TICKET"
                                android:textColor="#f78848" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/history" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="BOOKING HISTORY"
                                android:textColor="#f78848"
                                android:textSize="13sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/show"
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/showticket" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="SHOW TICKET"
                                android:textColor="#f78848"
                                android:textSize="13sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center|top"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/wallet" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="R - WALLET"
                                android:textColor="#f78848"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/user" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="PROFILE"
                                android:textColor="#f78848"
                                android:textSize="13sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/trans" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="TRANSACTIONS"
                                android:textColor="#f78848"
                                android:textSize="13sp" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/platform"
                                    android:layout_width="360dp"
                                    android:layout_height="700dp"
                                    android:orientation="vertical">

                                    <androidx.cardview.widget.CardView

                                        android:layout_width="match_parent"

                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        app:cardCornerRadius="5dp"
                                        app:cardElevation="2dp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:background="@drawable/gradient"

                                            android:paddingStart="20dp"
                                            android:paddingTop="2dp"
                                            android:text="PLATFORM BOOKING"
                                            android:textColor="#FFFFFF"
                                            android:textSize="18dp"/>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="40dp"
                                            android:gravity="center"
                                            android:orientation="vertical">


                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="30dp"
                                                android:orientation="horizontal">


                                                <RadioButton
                                                    android:id="@+id/rb5"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="5dp"
                                                    android:layout_weight="1"
                                                    android:allowUndo="true"
                                                    android:checked="false"

                                                    android:text="Book and Travel(Paperless)"
                                                    android:textSize="10sp" />

                                                <RadioButton
                                                    android:id="@+id/rb6"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:allowUndo="false"
                                                    android:checked="false"

                                                    android:text="Book and Print(Paper)"
                                                    android:textSize="10sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:id="@+id/tempCard3"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">


                                            </LinearLayout>

                                            <LinearLayout
                                                android:id="@+id/temp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="#00D6EA7E"
                                                android:orientation="vertical"
                                                android:padding="10dp">

                                                <TextView
                                                    android:id="@+id/textView2"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Station Name/Code"
                                                    android:textColor="#000000" />

                                                <TextView
                                                    android:id="@+id/ptStation"
                                                    android:textSize="20sp"
                                                    android:layout_marginTop="5dp"
                                                    android:paddingStart="15dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Station" />
                                                <View
                                                    android:layout_width="match_parent"
                                                    android:layout_height="2dp"
                                                 android:layout_marginHorizontal="10dp"
                                                    android:background="@color/main"/>
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:padding="10dp"
                                                    android:orientation="horizontal">
                                                    <LinearLayout

                                                        android:layout_width="0dp"
                                                        android:layout_weight="1"
                                                        android:orientation="vertical"
                                                        android:layout_height="match_parent">
                                                        <TextView

                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:text="Person(s)"
                                                            android:textColor="#000000" />
                                                        <Spinner
                                                            android:id="@+id/persons"
                                                            android:layout_marginTop="10dp"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"/>
                                                        <View
                                                            android:layout_width="match_parent"
                                                            android:layout_height="2dp"
                                                            android:layout_marginTop="9dp"
                                                            android:background="@color/main"/>
                                                    </LinearLayout>
                                                    <LinearLayout
                                                        android:paddingStart="10dp"
                                                        android:layout_width="0dp"
                                                        android:layout_weight="1"
                                                        android:orientation="vertical"
                                                        android:layout_height="match_parent">
                                                        <TextView

                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:text="Fare"
                                                            android:textColor="#000000" />

                                                        <EditText
                                                            android:id="@+id/fare"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginTop="15dp"
                                                            android:backgroundTint="@color/white"
                                                            android:hint="Enter Fare"
                                                            android:inputType="number"
                                                            android:text="10"
                                                            android:textSize="16sp" />
                                                        <View
                                                            android:layout_width="match_parent"
                                                            android:layout_height="2dp"
                                                            android:layout_marginTop="10dp"
                                                            android:background="@color/main"/>


                                                    </LinearLayout>


                                                </LinearLayout>
                                                <TextView

                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="25dp"
                                                    android:layout_marginStart="8dp"
                                                    android:text="Date"
                                                    android:textAllCaps="true"
                                                    android:textColor="#DC4819"
                                                    android:textSize="17dp" />
                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">
                                                    <TextView
                                                        android:id="@+id/date"
                                                        android:layout_marginStart="8dp"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginTop="15dp"
                                                        android:layout_alignParentStart="true"
                                                        android:text="12/12/2025"
                                                        android:textAllCaps="true"
                                                        android:paddingStart="10dp"
                                                        android:textColor="@color/black"
                                                        android:textSize="14dp" />

                                                    <ImageView
                                                        android:id="@+id/ivDate"
                                                        android:layout_alignParentEnd="true"
                                                        android:layout_width="50dp"
                                                        android:layout_height="50dp"
                                                        app:srcCompat="@drawable/calendar_month_24" />

                                                </RelativeLayout>

                                                <TextView

                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="25dp"
                                                    android:layout_marginStart="8dp"
                                                    android:text="time"
                                                    android:textAllCaps="true"
                                                    android:textColor="#DC4819"
                                                    android:textSize="17dp" />
                                                <RelativeLayout
                                                    android:layout_marginStart="8dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">
                                                    <TextView
                                                        android:id="@+id/time"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginTop="15dp"
                                                        android:layout_alignParentStart="true"
                                                        android:text="6:45"
                                                        android:textAllCaps="true"
                                                        android:paddingStart="10dp"
                                                        android:textColor="@color/black"
                                                        android:textSize="14dp" />

                                                    <ImageView
                                                        android:id="@+id/ivTime"
                                                        android:layout_alignParentEnd="true"
                                                        android:layout_width="50dp"
                                                        android:layout_height="50dp"
                                                        app:srcCompat="@drawable/time_24" />

                                                </RelativeLayout>

                                            </LinearLayout>

                                            <Button

                                                android:id="@+id/btnBook"
                                                android:layout_width="180dp"


                                                android:layout_height="40dp"
                                                android:layout_margin="25dp"

                                                android:background="@drawable/custbut"
                                                android:text="book ticket"
                                                android:textColor="#FFFFFF" />


                                        </LinearLayout>


                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>