<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bap"

    android:layout_width="340dp"
    android:layout_height="120dp"
    android:gravity="center|top"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Book Anywhere"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Print ticket at originating station."
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* PRINTED TICKET is travel authority."
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Travel without ticket printout is punishable."
                android:textColor="#e2393a"
                android:textSize="14sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


