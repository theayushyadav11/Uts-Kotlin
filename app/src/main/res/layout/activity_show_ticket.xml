                        android:textColor="#f78848"
                        android:textSize="12sp" />

                    <TextView

                        android:id="@+id/time1plat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
