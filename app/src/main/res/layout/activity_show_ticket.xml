                            android:text="S"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/source"
                        android:layout_width="139dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
