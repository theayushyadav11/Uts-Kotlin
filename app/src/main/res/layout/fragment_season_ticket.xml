<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragments.JourneyTicketFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fadeScrollbars="true"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/mainlayout"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="#ebedee"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_margin="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/ticketxmark" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="CANCEL TICKET"
                                android:textColor="#f78848" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/history" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="BOOKING HISTORY"
                                android:textColor="#f78848"
                                android:textSize="13sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/showTicket"
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/showticket" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="SHOW TICKET"
                                android:textColor="#f78848"
                                android:textSize="13sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center|top"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/wallet" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="R - WALLET"
                                android:textColor="#f78848"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/user" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="PROFILE"
                                android:textColor="#f78848"
                                android:textSize="13sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="113dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.3"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                app:srcCompat="@drawable/trans" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="TRANSACTIONS"
                                android:textColor="#f78848"
                                android:textSize="13sp" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/quickbooking"
                    android:layout_width="360dp"
                    android:layout_height="700dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/gradient"

                            android:paddingStart="20dp"
                            android:paddingTop="2dp"
                            android:text="SEASON BOOKING"
                            android:textColor="#FFFFFF"
                            android:textSize="18dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:orientation="horizontal">


                                <RadioButton
                                    android:id="@+id/rb3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:allowUndo="true"

                                    android:text="Book and Travel(Paperless)"
                                    android:textSize="10sp" />

                                <RadioButton
                                    android:id="@+id/rb4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:allowUndo="false"
                                    android:checked="false"
                                    android:clickable="false"
                                    android:text="Book and Print(Paper)"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/bat3"
                                android:layout_width="330dp"
                                android:layout_height="wrap_content"
                                android:gravity="center|top"
                                android:orientation="vertical">


                            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="25dp"
    android:layout_marginHorizontal="5dp"
    android:orientation="horizontal">
                            <Button
                                android:layout_width="140dp"
                                android:layout_height="40dp"

                                android:background="@drawable/custbut"
                                android:text="ISSUE TICKET"
                                android:textColor="#FFFFFF" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="18sp"
        android:textColor="#F44336"
        android:layout_marginHorizontal="10dp"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"

        android:background="@drawable/custbut"
        android:text="rENEW TICKET"
        android:textColor="#FFFFFF" />

</LinearLayout>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>