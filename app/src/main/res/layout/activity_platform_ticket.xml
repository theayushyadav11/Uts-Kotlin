<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        "

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/raillogo"></LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/your_textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="7dp"
            android:text="IR UNRESERVED TICKETING"
            android:textColor="#243387"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cris"></LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="0.9"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/mainColor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00e89f"
                                android:orientation="vertical"
                                android:padding="7dp">

                                <TextView
                                    android:id="@+id/textView20"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="HAPPY JOURNEY"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2px"
                                    android:background="#3F51B5"></View>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_centerInParent="true"
                                        android:text="PLATFORM"
                                        android:textColor="#000000"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/date2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="70dp"
                                        android:text="11/11/1111"
                                        android:textColor="#000000"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/fareticket"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:text="₹ 90.00"
                                        android:textColor="#000000"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/textView21"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/phone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="130dp"
                                        android:text="9696620395"
                                        android:textColor="#000000"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="UTS No: XCYSDQM056"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="3px"
                                    android:background="#3F51B5"></View>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView


                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="STATION: "
                                        android:textColor="#000000"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingLeft="5dp">

                                        <TextView

                                            android:id="@+id/sourceh"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="जौनपुर सिटी"
                                            android:textColor="#000000"
                                            android:textStyle="bold" />

                                        <TextView

                                            android:id="@+id/sourcee"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="JAUNPUR CITY"
                                            android:textColor="#000000"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>


                                <TextView

                                    android:id="@+id/pass"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="No of person(s): 1"
                                    android:textColor="#000000"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2px"
                                    android:background="#3F51B5"></View>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2px"
                                    android:background="#3F51B5"></View>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView

                                        android:id="@+id/SAC"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="SAC:"
                                        android:textColor="#070000" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_toRightOf="@id/SAC"
                                        android:text="996421"
                                        android:textColor="#070000"
                                        android:textStyle="bold" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_toLeftOf="@id/CC"
                                        android:text="IR:"
                                        android:textColor="#070000" />

                                    <TextView

                                        android:id="@+id/CC"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="25dp"
                                        android:text="09AAAGM0289C1ZH"
                                        android:textColor="#070000"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2px"
                                    android:background="#3F51B5"></View>

                                <TextView


                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Platform Ticket is valid upto 2 hours only from booking time.\nNo printout is required/No cancellation is allowed."
                                    android:textColor="#070000" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView

                                        android:id="@+id/textView29"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="R13921"
                                        android:textColor="#000000"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <TextView


                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Booking Time: "
                                        android:textColor="#000000"
                                        android:textStyle="bold" />

                                    <TextView

                                        android:id="@+id/date4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="2dp"
                                        android:text="16/11/2023"
                                        android:textColor="#000000" />

                                    <TextView

                                        android:id="@+id/time1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:paddingLeft="2dp"
                                        android:text="05:51"
                                        android:textColor="#000000" />


                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:paddingStart="10dp"
                                android:paddingRight="10dp"
                                android:text="It is recommended not to perform factory reset or change your handset whenever you are having valid ticket in the mobile"
                                android:textColor="#2342ED"
                                android:textSize="13sp" />

                            <TextView

                                android:id="@+id/under1"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="Click for Changing Handset with Valid Ticket."
                                android:textColor="#f78848"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
:gravity="center"
                                android:paddingLeft="15dp"
                                android:text="FOR MEDICAL EMERGENCY / FIRST AID , CONTACT TICKET CHECHKING STAFF/GUARD OR DIAL 139"
                                android:textColor="#FF0000"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <Button

                                    android:id="@+id/qr"
                                    android:layout_width="300dp"


                                    android:layout_height="30dp"
                                    android:background="@drawable/custbut"
                                    android:onClick="qr"
                                    android:text="OPEN QR CODE"
                                    android:textColor="#FFFFFF" />


                                <Button

                                    android:id="@+id/nextTrains"
                                    android:layout_width="300dp"


                                    android:layout_height="30dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/custbut"
                                    android:text="NEXT TRAINS TO LUCKNOW JN."
                                    android:textColor="#FFFFFF" />

                                <Button

                                    android:id="@+id/ok"
                                    android:layout_width="300dp"


                                    android:layout_height="30dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/custbut"
                                    android:onClick="back"
                                    android:text="OK"
                                    android:textColor="#FFFFFF" />


                            </LinearLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Center for Railway Information Systems(CRIS)"
            android:textColor="#000000"></TextView>

    </RelativeLayout>


</LinearLayout>
