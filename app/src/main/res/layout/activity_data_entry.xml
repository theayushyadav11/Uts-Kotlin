<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
  >
    <include layout="@layout/actionbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:keepScreenOn="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:capitalize="words"

                        android:text="enter the fare of the journey"
                        android:textAllCaps="true"
                        android:textColor="#DC4819"
                        android:textSize="17dp" />

                    <EditText
                        android:id="@+id/faremain"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:text="90"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="enter the distance of the journey"
                        android:textAllCaps="true"
                        android:textColor="#DC4819"
                        android:textSize="17dp" />

                    <EditText
                        android:id="@+id/distancemain"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:capitalize="characters"
                        android:ems="10"
                        android:inputType="number"
                        android:text="226"
                        android:textAllCaps="true"
                        android:textColor="#000000" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"

                        android:text="enter via"
                        android:textAllCaps="true"
                        android:textColor="#DC4819"
                        android:textSize="17dp" />

                    <EditText
                        android:id="@+id/viamain"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:capitalize="characters"
                        android:ems="10"
                        android:inputType="text"
                        android:text="LKO"
                        android:textAllCaps="true"
                        android:textColor="#000000" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"

                        android:text="number of passengers"
                        android:textAllCaps="true"
                        android:textColor="#DC4819"
                        android:textSize="17dp" />

                    <Spinner
                        android:id="@+id/nopmain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"

                        android:text="TYPE OF TRAIN"
                        android:textAllCaps="true"
                        android:textColor="#DC4819"
                        android:textSize="17dp" />

                    <Spinner
                        android:id="@+id/type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp" />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"

                        android:text="Date"
                        android:textAllCaps="true"
                        android:textColor="#DC4819"
                        android:textSize="17dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                       android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentStart="true"
                        android:text="12/12/2025"
                        android:textAllCaps="true"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/ivDate"
                            android:layout_alignParentEnd="true"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/calendar_month_24" />

                    </RelativeLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"

                        android:text="time"
                        android:textAllCaps="true"
                        android:textColor="#DC4819"
                        android:textSize="17dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_alignParentStart="true"
                            android:text="6:45"
                            android:textAllCaps="true"
                            android:paddingStart="10dp"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/ivTime"
                            android:layout_alignParentEnd="true"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/time_24" />

                    </RelativeLayout>


                    <Button
                        android:id="@+id/button6"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/custbut"

                        android:text="Done"
                        android:textColor="#FFFFFF" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>